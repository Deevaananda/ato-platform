# Production Environment Configuration
NODE_ENV=production

# Database Configuration
DATABASE_URL="file:./data/prod.db"

# Authentication Configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-super-secret-nextauth-key-minimum-32-characters"

# Email Service Configuration (SMTP)
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-email-password"
SMTP_FROM="ATO Platform <noreply@your-domain.com>"

# Alternative: SendGrid Configuration
# SENDGRID_API_KEY="your-sendgrid-api-key"

# SMS Service Configuration (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_FROM_NUMBER="+1234567890"

# Push Notification Configuration
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"
VAPID_SUBJECT="mailto:admin@your-domain.com"

# External Integration Configuration
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
TEAMS_WEBHOOK_URL="https://your-org.webhook.office.com/webhookb2/YOUR-WEBHOOK-URL"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://redis:6379"

# Monitoring & Analytics
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
ANALYTICS_ID="your-google-analytics-id"

# File Upload Configuration
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_DIR="./uploads"

# Rate Limiting Configuration
RATE_LIMIT_MAX="100" # requests per window
RATE_LIMIT_WINDOW="900000" # 15 minutes in milliseconds

# Security Configuration
CORS_ORIGIN="https://your-domain.com"
SESSION_SECRET="your-session-secret-key"
ENCRYPTION_KEY="your-32-character-encryption-key"

# Performance Configuration
OPTIMIZATION_MAX_GENERATIONS="1000"
OPTIMIZATION_POPULATION_SIZE="100"
OPTIMIZATION_MUTATION_RATE="0.1"
OPTIMIZATION_CROSSOVER_RATE="0.8"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"

# Health Check Configuration
HEALTH_CHECK_ENABLED="true"
HEALTH_CHECK_ENDPOINT="/health"

# Database Connection Pool
DATABASE_POOL_SIZE="10"
DATABASE_TIMEOUT="5000"